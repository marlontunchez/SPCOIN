});


function obtenerDatosVentasAnual() {
  console.log("Solicitando datos...");
  $.ajax({
    url: "/inicio/ventasanual",
    type: "GET",
    dataType: "json",
    success: function(data) {
        console.log(data);
        ChartVentasAnual(data);
